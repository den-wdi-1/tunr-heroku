<h2>Edit Song</h2>

<form action='/songs/<%= "#{@song.id}" %>' method="post">
  <label for="song[title]">Title:</label>
  <input name="song[title]" value='<%= "#{@song.title}" %>'>

  <label for="song[duration]">Duration:</label>
  <input name="song[duration]" value='<%= "#{@song.duration}" %>'>

  <label for="song[year_of_release]">Year of Release:</label>
  <input name="song[year_of_release]" value='<%= "#{@song.year_of_release}" %>'>

  <label for="song[album_title]">Album Title:</label>
  <input name="song[album_title]" value='<%= "#{@song.album_title}" %>'>

  <input type="submit" value="Create">
</form>
